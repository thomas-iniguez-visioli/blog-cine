<% if(page.prev) { index+=1 }%>

<div class="item-<%=index%>">
  <a href="<%- config.root %><%- item.path %>" class="post">
    <div class="thumb" ><img src="<%- config.root %><%- item.featured_image.replace(' ','-') || theme.featured_image %>" style=" object-fit: fill"></img>  </div>
    <article>
      <h1>
        <%=item.title %>
      </h1>
      <% if(index != 1){ %>
      <p>
        <%- item.summary || item.excerpt %>
      </p>
      <% } %>
      <span>
        <%= item.date.format(config.date_format) %></span>
    </article>
  </a>

</div>